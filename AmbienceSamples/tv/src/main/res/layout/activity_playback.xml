<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/album_image_id"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/play_image_size"
                android:layout_height="@dimen/play_image_size" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/track_title_id"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="@dimen/three_hundred_dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/album_title_id"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subTitle"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="@dimen/three_hundred_dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>





