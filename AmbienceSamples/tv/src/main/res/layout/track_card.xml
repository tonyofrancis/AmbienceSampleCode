<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_width"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_height="@dimen/card_height">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/board"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/album_image_id"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/primary_light"
            android:orientation="vertical"
            android:layout_weight=".5">
            <TextView
                android:id="@+id/album_title_id"
                android:layout_width="match_parent"
                android:textColor="@color/pencil"
                android:layout_height="wrap_content"
                android:text="Track Name"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/ten_padding"
                android:layout_marginRight="@dimen/ten_padding"
                android:layout_marginTop="@dimen/ten_padding"
                android:textSize="@dimen/title"/>

            <TextView
                android:id="@+id/album_subtitle_id"
                android:layout_width="match_parent"
                android:text="Unknown Album"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/subTitle"
                android:layout_marginLeft="@dimen/ten_padding"
                android:layout_marginRight="@dimen/ten_padding"
                android:textColor="@color/light_pencil" />

            <TextView
                android:id="@+id/album_genre_id"
                android:layout_width="match_parent"
                android:text="pop"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/subTitle"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="@dimen/ten_padding"
                android:layout_marginRight="@dimen/ten_padding"
                android:textColor="@color/light_pencil" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>